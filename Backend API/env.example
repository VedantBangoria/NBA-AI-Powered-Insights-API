# NBA Analytics API Configuration

# Local LLM Model Configuration
# Available models: llama2:7b, mistral:7b, phi:2.7b, codellama:7b
# For your RTX 3050 Ti, I recommend: llama2:7b
LLM_MODEL_NAME=llama2:7b

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Data Configuration
DATA_PATH=data/nba_combined_latest.csv
USE_SAMPLE_DATA=true

# Logging
LOG_LEVEL=INFO

# CORS Settings (for production, specify actual origins)
CORS_ORIGINS=["*"]

# Ollama Configuration (if using custom Ollama setup)
OLLAMA_HOST=http://localhost:11434
